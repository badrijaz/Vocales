<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <Button
        android:id="@+id/buttonStream"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/text_stream"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewIsStreaming"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/text_is_streaming"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/buttonStream"
        app:layout_constraintStart_toStartOf="@+id/buttonStream"
        app:layout_constraintTop_toBottomOf="@+id/buttonStream" />
</androidx.constraintlayout.widget.ConstraintLayout>